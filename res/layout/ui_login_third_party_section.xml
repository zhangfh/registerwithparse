<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/facebook_login"
        style="@style/LoginUI.Button.ThirdPartyLogin"
        android:layout_marginTop="@dimen/ui_small_vertical_spacing"
        android:background="@drawable/ui_facebook_login_button_background_selector"
        android:drawableLeft="@drawable/ui_facebook_login_logo"
        android:text="@string/ui_facebook_login_button_label"
        android:visibility="gone" />

    <Button
        android:id="@+id/twitter_login"
        style="@style/LoginUI.Button.ThirdPartyLogin"
        android:layout_marginTop="@dimen/ui_small_vertical_spacing"
        android:background="@drawable/ui_twitter_login_button_background_selector"
        android:drawableLeft="@drawable/ui_twitter_login_logo"
        android:text="@string/ui_twitter_login_button_label"
        android:visibility="gone" />
</merge>
